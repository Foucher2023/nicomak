{% extends 'base.html.twig' %}

{% block title %}Thanks index{% endblock %}

{% block body %}
    <h1>Thanks index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Merci envoyer par</th>
                <th>Text</th>
                <th>pour<th>
                <th>TkDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for thank in thanks %}
            <tr>
                <td>{{thank.TksBy}}</td>
                <td>{{ thank.Text }}</td>
                <td>{{ thank.TksFor}}</td>
                <td>{{ thank.TkDate ? thank.TkDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_thanks_edit', {'id': thank.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_thanks_new') }}">Create new</a>
{% endblock %}
