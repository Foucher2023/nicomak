{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/css_form.css') }}">
{% endblock %}

{{ form_start(form, { 'attr': { 'class': 'custom-form'} }) }}
    <div class="form-group">
        {{ form_row(form.TksBy, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.Text, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.TksFor, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.TkDate, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-actions">
        <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
    </div>
{{ form_end(form) }}
