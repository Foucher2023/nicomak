{% block stylesheets %}
<style>
.button-section {
    display: inline-block;
    padding: 10px 20px;
    background-color: #f8af7f;
    color: white;
    text-decoration: none;
    border-radius: 5px;
    font-size: 20px;
    margin-top: 0.5%;
    margin-bottom: 0.5%;
    border: none; /* Removes default button border */
    cursor: pointer; /* Ensures pointer cursor */
    text-align: center; /* Centers the text */
}

.button-section:hover {
    background-color: #f37929;
    color: white;
    text-decoration: none;
}
</style>
{% endblock %}


{% block body %}
<form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="btn">Delete</button>
</form>
 {% endblock %}
